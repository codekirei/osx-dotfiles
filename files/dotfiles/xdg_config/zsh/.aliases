############################################################
# GENERAL
############################################################
LS='gls -FX --color --group-directories-first'
alias sudo='sudo '
alias c='ccat '
alias cdi='touch "$CDI" && ranger --choosedir="$CDI"; cd $(cat "$CDI"); \rm "$CDI"'
alias e='nvim '
alias l="$LS -A"
alias la='l'
alias ll='l -o'
alias r='ranger'
alias rm='rm -i'
alias rlz='. "$XDG_CONFIG_HOME"/zsh/.zshrc && . "$HOME"/.zshenv && clear'
alias syu='play -K "$HOME"/code/dotfiles/osx-dotfiles/site.yml'

############################################################
# CD
############################################################
alias ..2='cd ../..'
alias ..3='cd ../../..'
alias ..4='cd ../../../..'
alias ..5='cd ../../../../..'

############################################################
# DOCKER
############################################################
alias d='docker '
alias dc='docker-compose '
alias dm='docker-machine '
alias dps='docker ps'
alias dzr='dc run web python manage.py'

