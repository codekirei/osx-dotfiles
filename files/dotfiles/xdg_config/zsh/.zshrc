############################################################
# SOURCE
############################################################
. "$HOME"/.secret
. "$ZDOTDIR"/.plugins
. "$ZDOTDIR"/.opts
. "$ZDOTDIR"/.aliases
. "$ZDOTDIR"/.functions

############################################################
# PATH
############################################################
path_prepend /usr/local/bin
path_prepend /usr/local/sbin
path_prepend "$HOME"/code/sh/bin
path_prepend "$HOME"/code/python/bin

############################################################
# PROMPT
############################################################
PROMPT="
%U%~%u
> "

############################################################
# NVM
############################################################
export NVM_DIR="$HOME/.nvm"
. "$(brew --prefix nvm)/nvm.sh"

############################################################
# FZF
############################################################
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# vim: ft=zsh
